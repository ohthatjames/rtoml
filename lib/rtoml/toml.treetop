grammar Rtoml
  rule document
    (assignment / newline)+
    {
      def content
        data = {}
        elements.each do |element|
          next if element.content.nil?
          key, value = element.content
          data[key] = value
        end
        data
      end
    }
  end
  
  rule assignment
    S key S "=" S value S
    {
      def content
        [key.content, value.content]
      end
    }
  end
  
  rule key
    [a-zA-z]+
    {
      def content
        text_value
      end
    }
  end
  
  rule value
    [0-9]+
    {
      def content
        text_value.to_i
      end
    }
  end
  
  rule S
    [\ \t]*
  end
  
  rule newline
    "\n" 
    {
      def content
        nil
      end
    }
  end
end
